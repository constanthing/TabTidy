{
    "manifest_version": 3,
    "name": "TabSentry",
    "version": "1.0",
    "description": "A simple extension to help you manage your tabs",
    "background": {
        "service_worker": "background/background.js",
        "type": "module"

    },
    "permissions": [
        "windows",
        "tabs",
        "scripting",
        "storage",
        "sessions"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+S",
                "mac": "Command+Shift+S"
            }, 
            "description": "Open TabSentry"
        },
        "alternate-tab": {
            "suggested_key": {
                "default": "Alt+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "Alternate between last two open tabs"
        }
    }
}